<% if @book.errors.any? %>
	<h3><%= pluralize(@book.errors.count, "error") %>&nbsp;prohibited this user from being saved:</h3>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<div class="container">
<div class="row">
<div class="col-md-8 offset-md-5">
<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <div>
  <label for="inputName">Title</label>
  </div>
  <div>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div><label for="inputImage">Opinion</label></div>
  <div>
  <%= f.text_area :body %>
  </div>
  <div>  
  <%= f.submit "Update Book" ,class: "btn btn-success col-xs-12"%>
  </div>
<% end %>
<%= link_to "Show", book_path %>
   |
<%= link_to "Back", books_path %>
</div>
</div>
</div>